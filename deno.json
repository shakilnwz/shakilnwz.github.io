{
    "tasks": {
        "dev": "deno run -A --node-modules-dir npm:vite",
        "build": "deno run -A --node-modules-dir npm:vite build",
        "preview": "deno run -A --node-modules-dir npm:vite preview",
        "serve": "deno run --allow-net --allow-read jsr:@std/http@1/file-server dist/"
    },
    "compilerOptions": {
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ]
    },
    "imports": {
        "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.2.0",
        "@vitejs/plugin-vue": "npm:@vitejs/plugin-vue@^6.0.4",
        "gsap": "npm:gsap@^3.14.2",
        "tailwindcss": "npm:tailwindcss@^4.2.0",
        "vite": "npm:vite@^7.3.1",
        "vue": "npm:vue@^3.5.28",
        "vue-router": "npm:vue-router@^4.6.4"
    },
    "nodeModulesDir": "auto"
}
